{
  "$schema": "https://claude.ai/schemas/local-settings.json",
  "autoFormatCode": true,
  "autoTypeAnnotateJSDoc": true,
  "errorWhenMissingTypes": true,
  "formatter": {
    "javascript": {
      "printWidth": 100,
      "tabWidth": 2,
      "useTabs": false,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "arrowParens": "avoid"
    },
    "python": {
      "line_length": 88,
      "use_tabs": false,
      "tab_width": 4
    },
    "json": {
      "tabWidth": 2,
      "useTabs": false,
      "printWidth": 80
    },
    "jsonc": {
      "tabWidth": 2,
      "useTabs": false,
      "printWidth": 80
    },
    "typescript": {
      "printWidth": 100,
      "tabWidth": 2,
      "useTabs": false,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "arrowParens": "avoid"
    }
  },
  "hooks": {
    "allow": [
      "Bash(flake8 **/[!venv]*.py)",
      "Bash(mypy --ignore-missing-imports **/[!venv]*.py)",
      "Bash(SKIP=fix-end-of-files,mypy git commit -m \"ðŸ”§ chore: Update project with new dependencies\")",
      "Bash(flake8 *.py)",
      "Bash(mypy *.py)",
      "Bash(flake8 --extend-ignore=E501 *.py)",
      "Bash(mypy --show-error-codes *.py)",
      "Bash(mypy --ignore-missing-imports *.py)",
      "Bash(isort *.py)",
      "Bash(black *.py)",
      "Bash(flake8 --extend-ignore=E501 */*.py)",
      "Bash(mypy --ignore-missing-imports */*.py)",
      "Bash(mypy */*.py)",
      "Bash(isort */*.py)",
      "Bash(black */*.py)",
      "Bash(flake8 --extend-ignore=E501 */*/*.py)",
      "Bash(mypy --ignore-missing-imports */*/*.py)",
      "Bash(isort */*/*.py)",
      "Bash(black */*/*.py)",
      "Bash(flake8 tests/test_*.py)",
      "Bash(mypy tests/test_*.py)",
      "Bash(isort tests/test_*.py)",
      "Bash(black tests/test_*.py)",
      "Bash(SKIP=fix-end-of-files,mypy git commit -m \"ðŸ”§ chore: Fix missing newline at end of settings.local.json\")",
      "Bash(SKIP=mypy git commit -m \"ðŸ”§ chore: Fix missing newline at end of settings.local.json\")",
      "Bash(MOCK_MODE=true python app.py)",
      "Bash(MOCK_MODE=true python3 app.py)",
      "Bash(sudo lsof:*)",
      "Bash(git commit --no-verify -m *)"
    ],
    "deny": []
  },
  "permissions": {
    "allow": [
      "Bash(git commit:*)"
    ],
    "deny": []
  }
}